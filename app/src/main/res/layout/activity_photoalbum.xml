<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msff242728"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.glitchcam.vepromei.edit.view.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/albumNameText"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="14dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/albumTipsText"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

    <com.glitchcam.vepromei.photoalbum.grallyRecyclerView.GalleryRecyclerView
        android:id="@+id/albumRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

    </com.glitchcam.vepromei.photoalbum.grallyRecyclerView.GalleryRecyclerView>

    <TextView
        android:id="@+id/albumIndexText"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/albumUseBtn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_caption_style_corner_button"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="@string/use"/>
</LinearLayout>